<div class="expresso-ctn">
  <h1 class="h1">{{ section.settings['section-heading'] }}</h1>

  <div class="expresso-ctn-inner section-width">
    <div class="left-img">
      <img src="{{ section.settings.product-img | image_url }}" alt="" srcset="">
    </div>

    <div class="how-to-make-details">
      <div class="top">
        <div class="expresso-clock-timer">
          <div class="clock"><img src="{{ section.settings.clock-icon | image_url }}" alt="" srcset=""></div>
          <div class="time">
            <p>{{ section.settings.timer }}</p>
          </div>
        </div>
        <h3 class="h3">{{ section.settings.ingr }}</h3>
        <ul>
          <li>{{ section.settings['ing-list-item1'] }}</li>
          <li>{{ section.settings['ing-list-item2'] }}</li>
          <li>{{ section.settings['ing-list-item3'] }}</li>
          <li>{{ section.settings['ing-list-item4'] }}</li>
        </ul>
      </div>
      <div class="bottom">
        <div class="social-text">
          <p class="social-desc">{{ section.settings.smd }}</p>
        </div>
        <div class="social-icons">
          <img src="{{ section.settings.fb | image_url }}" alt="" srcset="">
          <img src="{{ section.settings.insta | image_url }}" alt="" srcset="">
          <img src="{{ section.settings.tiktok | image_url }}" alt="" srcset="">
        </div>
      </div>
    </div>
  </div>
</div>

