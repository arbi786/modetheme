{% endschema %}

{% stylesheet %}
  .expresso-ctn {
    text-align: center;
    background-color: #FFFFF0;
    padding-top: 5rem;
    padding-bottom: 2rem;
    width: 100vw;
  }
  .expresso-ctn .expresso-ctn-inner {
    width: 90vw;
    margin: auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
  }
  .expresso-ctn .expresso-ctn-inner .left-img img {
    width: 80%;
  }
  .expresso-ctn .expresso-ctn-inner .how-to-make-details {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  .expresso-ctn .expresso-ctn-inner .how-to-make-details .top {
    text-align: left;
  }
  .expresso-ctn .expresso-ctn-inner .how-to-make-details .top ul {
    list-style: none;
    padding: 0px;
  }
  .expresso-ctn .expresso-ctn-inner .how-to-make-details .top ul li {
    margin-top: 10px;
    font-family: "MatterMono-reg";
  }
  .expresso-ctn .expresso-ctn-inner .how-to-make-details .bottom {
    text-align: right;
  }
  .expresso-ctn .expresso-ctn-inner .how-to-make-details .bottom .social-text {
    text-align: right;
  }
  .expresso-ctn .expresso-ctn-inner .how-to-make-details .bottom .social-icons img {
    width: 20px;
    z-index: 99;
    margin-right: 20px;
  }
{% endstylesheet %}

