<div class="coffee-smarter-ctn">
  <div class="coffee-smarter-ctn-inner">
    <h2 class="h2">{{ section.settings['section-heading'] }}</h2>
    <p class="coffee-desc">{{ section.settings['section-desc'] }}</p>

    <table width="90%" align="center" cellspacing="0px">
      <tr align="center" style="background-color: black; color: white; margin-bottom: 1rem;">
        <td>
          <h4 class="h4">{{ section.settings.th1 }}</h4>
        </td>
        <td>
          <h4 class="h4">{{ section.settings.th2 }}</h4>
        </td>
        <td style="border-radius: 30px;">
          <h4 class="h4">{{ section.settings.th3 }}</h4>
        </td>
      </tr>

      <tr style="color: #000; background-color: white;" align="center">
        <td>
          <p class="body-copy-bold">{{ section.settings.r1c1 }}</p>
        </td>
        <td><img src="{{ section.settings.r1c2 | image_url}}"></td>
        <td><img src="{{ section.settings.r1c3 | image_url }}" alt="" srcset=""></td>
      </tr>

      <tr style="background-color: white;" align="center">
        <td>
          <p class="body-copy-bold">{{ section.settings.r2c1 }}</p>
        </td>
        <td><img src="{{ section.settings.r2c2 | image_url }}"></td>
