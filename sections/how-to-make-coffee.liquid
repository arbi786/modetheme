      </tr>

      <tr style="background-color: white; border-radius: 30px;" align="center">
        <td>
          <p class="body-copy-bold">{{ section.settings.r3c1 }}</p>
        </td>
        <td><img src="{{ section.settings.r3c2 | image_url }}"></td>
        <td><img src="{{ section.settings.r3c3 | image_url}}" alt="" srcset=""></td>
      </tr>

      <tr style="background-color: white; border-radius: 30px;" align="center">
